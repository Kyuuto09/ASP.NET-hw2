@model List<ASP_NET_hw2.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2>Shopping Cart</h2>

    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price* item.Quantity).ToString("C")</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
