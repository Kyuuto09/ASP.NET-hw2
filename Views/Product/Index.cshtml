@model IEnumerable<ASP_NET_hw2.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h2>All Products</h2>

    <p>
        <a asp-action="Create" class="btn">+ Add Product</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
